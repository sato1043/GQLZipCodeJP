# EditorConfig refs: https://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
tab_width = 2
max_line_length = 150

# refs
#   - https://github.com/markdown-it/markdown-it/blob/master/.editorconfig
[*.md]
trim_trailing_whitespace = false
max_line_length = 80
