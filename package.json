{
  "name": "GQLZipCodeJP",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "(cd scripts/zipcode-json/data ; bash _extract-data.sh) ; (cd scripts/crt@localhost ; bash gencrt.sh)",
    "start": "exit 1",
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 DEBUG=GQLZipCodeJP* tsx watch ./src",
    "lint": "run-s lint:*",
    "lint:md": "markdownlint-cli2 \"**/*.md\" && textlint \"**/*.md\"",
    "lint:ts": "tsc --noEmit",
    "lint:es": "exit 0",
    "lint:pkgver-desc": "grep -E '\"[~^]' package.json; test $? -eq 1",
    "mnt:pkg:add": "npm install --save-exact",
    "mnt:pkg:add-dev": "npm install --save-dev --save-exact",
    "mnt:pkg:depcheck": "depcheck",
    "mnt:pkg:updcheck": "npx -p npm-check-updates --yes --prefer-online -- ncu --upgrade --install always --interactive"
  },
  "dependencies": {
    "cookie-parser": "1.4.6",
    "debug": "4.3.6",
    "express": "4.19.2",
    "morgan": "1.10.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.12",
    "@types/express": "4.17.21",
    "@types/node": "22.2.0",
    "depcheck": "1.4.7",
    "markdownlint-cli2": "0.13.0",
    "npm-run-all": "4.1.5",
    "textlint": "14.0.5",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "textlint-rule-preset-japanese": "10.0.3",
    "tsx": "4.17.0",
    "typescript": "5.5.4"
  }
}
